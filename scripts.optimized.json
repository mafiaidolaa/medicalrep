{
  "scripts": {
    "dev:fast": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" next dev --turbopack",
    "dev:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048 --optimize-for-size\" next dev",
    "dev:light": "next dev --port 3001",
    "build:fast": "cross-env NODE_OPTIONS=\"--max-old-space-size=3072\" next build",
    "build:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=3072 --optimize-for-size\" next build",
    "analyze": "cross-env ANALYZE=true NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "clean": "rimraf .next node_modules/.cache",
    "clean:all": "rimraf .next node_modules",
    "reinstall": "npm run clean:all && npm install",
    "memory:check": "node -e \"console.log('Memory limit:', require('v8').getHeapStatistics().heap_size_limit / 1024 / 1024, 'MB')\"",
    "deps:check": "node analyze-bundle.js"
  },
  "devDependencies_to_add": {
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  }
}